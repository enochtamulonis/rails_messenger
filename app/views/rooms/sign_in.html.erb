<div class="w-4/5 h-screen flex flex-col items-center justify-center mx-auto">
  <div class="flex flex-col md:w-full lg:w-1/2">
    <%= form_with url: room_authenticate_path, html: {class: "w-full flex", data: {controller: "sign-in-form", sign_in_form_success_class: "border-green-400", sign_in_form_danger_class: "border-red-500", sign_in_form_character_count_value: 50}} do |form| %>
      <%= form.text_field :name, :class => "w-full text-lg border-b-2 border-indigo-900 mt-4 pl-2 outline-none", placeholder: "Enter A Screen Name", data: {action: "input->sign-in-form#inputText", sign_in_form_target: "input"}%>
      <%= form.submit "Join room", :class => "w-1/3 border-2 border-green-400 ml-2 px-2 rounded-sm shadow cursor-pointer hidden", data: {sign_in_form_target: "submitBtn"} %>
    <% end %>
  </div>
</div>
