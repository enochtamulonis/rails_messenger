<%= turbo_frame_tag dom_id(message), id: dom_id(message) do %>
  <div class="flex w-full bg-gray-400 min-h-10 pl-4 py-2" data-controller="message">
    <div class="flex flex-col">
      <h3 class="text-lg"> <%= message.content %> </h3>
      <p class="text-gray-700 text-sm"> <%= @username ? @username : "someone" %> <%= time_ago_in_words(message.created_at) %> ago </p>
    </div>
    <% if session[:current_user] == @username %>
      <%= button_to "X", room_message_path(room_id: @room.id, id: message.id), :method => :delete, :class => "ml-auto" %>
    <% end %>
  </div>
<% end %>
